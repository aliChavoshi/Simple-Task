{
   "printWidth": 180,
   "singleQuote": true,
   "tabWidth": 3,
   "overrides": [
      {
         "files": "*.ts",
         "options": {
            "parser": "typescript",
            "trailingComma": "none"
         }
      },
      {
         "files": "*.json",
         "options": {
            "parser": "json",
            "trailingComma": "none"
         }
      },
      {
         "files": "*.scss",
         "options": {
            "parser": "scss",
            "trailingComma": "none"
         }
      },
      {
         "files": "*.css",
         "options": {
            "parser": "css",
            "trailingComma": "none"
         }
      }
   ],
   "editor.tabCompletion": "on",
   "editor.snippetSuggestions": "top",
   "editor.wordWrap": "on",
   "editor.formatOnSave": true,
   "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
   }
}
